<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moviem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redColor</item>
        <item name="colorPrimaryVariant">@color/backgroundLayoutColorDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redColor</item>
        <item name="colorSecondaryVariant">@color/redColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="background_color">@color/backgroundColorDark</item>
        <item name="bottom_navigation_color">@color/bottomNavigationColorDark</item>
        <item name="text_color">@color/titleTextColorDark</item>
        <item name="icon_tint_color">@color/simpleIconTintColorDark</item>
        <item name="search_color">@color/searchIconTintColorDark</item>
        <item name="indicator_color">#9FEE1520</item>
        <item name="layout_color">@color/backgroundLayoutColorDark</item>
        <item name="gradient_color">@color/blurImageGradientColorDark</item>
        <item name="sub_text_color">@color/subtitleTextColorDark</item>
        <item name="bottom_navigation_icon_color">#5FFFFFFF</item>
        <item name="fontFamily">@font/netflix_sans</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottom_sheet_color">#2B2B2B</item>
        <item name="summary_color">#FBFBFB</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/blurImageGradientColorDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- Alert Dialog -->
    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog_Background" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/backgroundLayoutColorDark</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/titleTextColorDark</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/redColor</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@color/backgroundLayoutColorDark</item>
    </style>
</resources>