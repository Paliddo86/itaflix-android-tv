<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moviem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redColor</item>
        <item name="colorPrimaryVariant">@color/backgroundLayoutColorLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redColor</item>
        <item name="colorSecondaryVariant">@color/redColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="background_color">@color/backgroundColorLight</item>
        <item name="bottom_navigation_color">@color/bottomNavigationColorLight</item>
        <item name="text_color">@color/titleTextColorLight</item>
        <item name="icon_tint_color">@color/simpleIconTintColorLight</item>
        <item name="search_color">@color/searchIconTintColorLight</item>
        <item name="indicator_color">#9fEE1520</item>
        <item name="layout_color">@color/backgroundLayoutColorLight</item>
        <item name="gradient_color">@color/blurImageGradientColorLight</item>
        <item name="sub_text_color">@color/subtitleTextColorLight</item>
        <item name="bottom_navigation_icon_color">#000000</item>
        <item name="fontFamily">@font/netflix_sans</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottom_sheet_color">#F8F8F8</item>
        <item name="summary_color">#0B0B0B</item>
    </style>

    <style name="MyCustomFontTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/netflix_sans_medium</item>
        <item name="android:fontFamily">@font/netflix_sans_medium</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/netflix_sans_medium</item>
        <item name="android:fontFamily">@font/netflix_sans_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/netflix_sans_bold</item>
        <item name="android:fontFamily">@font/netflix_sans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="colorPrimary">@color/redColor</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MtButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/RedButtonThemeOverlay</item>
    </style>

    <style name="RedButtonThemeOverlay">
        <item name="colorPrimary">@color/redColor</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/blurImageGradientColorLight</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog_Background" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/backgroundLayoutColorLight</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/titleTextColorLight</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/redColor</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@color/backgroundLayoutColorLight</item>
    </style>
</resources>